def exercicio1():
    nota1 = int(input('Nota 1ª prova:7 '))
    nota2 = int(input('Nota 2ª prova:8 '))
    nota3 = int(input('Nota 3ª prova:6 '))

    soma_das_notas = nota1 + nota2 + nota3
    media_das_notas = soma_das_notas/3

    print(f'Média do aluno é {media_das_notas}')


exercicio1()

