def exercicio3():
  escolha = input("Entre com sua escolha aqui: ")
  while escolha !='z' or escolha !='Z':
    if escolha == 'a':
      print("Globo")
    elif escolha == 'b':
      print('SBT')
    else:
      print("Inválido")
      break
    escolha = input()


exercicio3()

def exercicio4(lista):
  medias_inferiores_que_7 = 0
  for elemento in lista:
    if elemento < 7:
      medias_inferiores_que_7 += 1
  if medias_inferiores_que_7 * len(lista) > 0.25:
    return "Professor Coxa"
  else:
    return "Professor Padrão"
lista = [4,5,8,9]


  ecercicio4()
